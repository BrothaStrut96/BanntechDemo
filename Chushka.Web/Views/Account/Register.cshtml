@model RegisterFormModel
@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="card-body">

        <div class="container text-center">
            <p class="display-3">Register</p>
            <hr class="bg-white" />
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("Username")
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", type = "text", placeholder = "Username..." })
                @Html.ValidationMessageFor(model => model.Username, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Password")
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", placeholder = "Password..." })
                @Html.ValidationMessageFor(model => model.Password, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Confirm Password")
                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", type = "password", placeholder = "Confirm Password..." })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Full Name")
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", type = "text", placeholder = "Full Name..." })
                @Html.ValidationMessageFor(model => model.FullName, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Email")
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Email..." })
                @Html.ValidationMessageFor(model => model.Email, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="row text-center">
                <div class="col-sm-4">
                    <!-- spacer -->
                </div>
                <div class="col-sm-4">
                    <input type="submit" class="btn chushka-bg-color" value="Register">
                </div>
                <div class="col-sm-4">
                    <!-- spacer -->
                </div>
            </div>
        }
        <br />
        <div class="container text-center">
            <a class="nav-link-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </div>

    </div>
</div>
